algoritmo "TestaLacoLoop"

var

   //Declaracao de Variaveis
   
   A, B : inteiro

inicio

      //Entrada de Dados
      
      escreva("Digite um numero: ")
      leia(A)
      
      enquanto (A <= 100) faça
      
      A <- A + 1
      
      se ( A MOD 2 = 0 ) entao

      escreva (A)



      fimse
      fimenquanto

fimalgoritmo